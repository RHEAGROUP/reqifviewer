<RadzenSidebar @bind-Expanded="@Expanded">
    <ChildContent>
        <div style="padding: 1rem">
        </div>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="/"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="About" Icon="search" Path="about"></RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </ChildContent>
</RadzenSidebar>

@code {

    /// <summary>
    /// Gets or sets a value indicating whether the <see cref="SideMenu"/> is expanded or not
    /// </summary>
    [Parameter]
    public bool Expanded { get; set; }

    /// <summary>
    /// The <see cref="EventCallback"/> associated to the <see cref="Expanded"/> property
    /// </summary>
    [Parameter]
    public EventCallback<bool> ExpandedChanged { get; set; }
}