@page "/reqif/{Identifier}/specrelations"

@using ReqIFSharp
@using ReqifViewer.Infrastructure.ReqIFExtensions
@using ReqifViewer.Infrastructure.Services

@inject IReqIFLoaderService reqIfLoaderService

@if (isLoading)
{
    <RadzenHeading Size="H1" style="display: inline-block" Text="Spec Objects"></RadzenHeading>

    <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin-bottom: 20px" />
}
else
{
    <RadzenHeading Size="H1" style="display: inline-block" Text="@($"Spec Relations - {reqIf?.TheHeader.Title}")"></RadzenHeading>

    <RadzenGrid Count="@count" PageSize="10" AllowPaging="true" Data="@this.specRelations" TItem="SpecRelation">
        <Columns>
            <RadzenGridColumn TItem="SpecRelation" Title="Spec Relation">
                <Template Context="specRelation">
                    <a href="reqif/@this.Identifier/specrelation/@specRelation?.Identifier">
                        @(new MarkupString(specRelation?.ExtractDisplayName().ToString()))
                    </a>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SpecRelation" Title="Source">
                <Template Context="specRelation">
                    <a href="reqif/@this.Identifier/specobject/@specRelation?.Source?.Identifier">
                        @(new MarkupString(specRelation?.Source?.ExtractDisplayName().ToString()))
                    </a>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SpecRelation" Title="Target">
                <Template Context="specRelation">
                    <a href="reqif/@this.Identifier/specobject/@specRelation?.Source?.Identifier">
                        @(new MarkupString(specRelation?.Target?.ExtractDisplayName().ToString()))
                    </a>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SpecRelation" Property="Description" Title="Description" />
            <RadzenGridColumn TItem="SpecRelation" Property="LastChange" Title="Last Change" />
            <RadzenGridColumn TItem="SpecRelation" Property="AlternativeId" Title="Alternative Id" />
        </Columns>
    </RadzenGrid>
}

@code {

    /// <summary>
    /// Gets or sets the unique identifier of the <see cref="ReqIF.TheHeader"/>
    /// </summary>
    [Parameter]
    public string Identifier { get; set; }

    /// <summary>
    /// a value indicating whether the page is loading or not
    /// </summary>
    private bool isLoading = true;

    /// <summary>
    /// a value that states the total amount of <see cref="SpecObject"/>s in the reqif file
    /// </summary>
    private int count;

    /// <summary>
    /// The <see cref="SpecObject"/>s that are contained in the <see cref="ReqIF"/>
    /// </summary>
    private IEnumerable<SpecRelation> specRelations;

    /// <summary>
    /// The <see cref="ReqIF"/> object that is loaded on the page
    /// </summary>
    private ReqIF reqIf;

    /// <summary>
    /// Asynchronous Component initialization
    /// </summary>
    /// <returns>
    /// an awaitable <see cref="Task" />
    /// </returns>
    protected override void OnInitialized()
    {
        isLoading = false;

        this.LoadData();
    }

    /// <summary>
    /// Load the data
    /// </summary>
    protected void LoadData()
    {
        try
        {
            isLoading = true;

            this.reqIf = this.reqIfLoaderService.ReqIFData.SingleOrDefault(x => x.TheHeader.Identifier == this.Identifier);

            this.specRelations = reqIf.CoreContent.SpecRelations;

            this.count = this.specRelations.Count();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
