@page "/specificationtypes/{Identifier}"

@using ReqIFSharp
@using ReqifViewer.Infrastructure.Services

@inject IReqIFLoaderService reqIfLoaderService

@if (isLoading)
{
    <RadzenHeading Size="H1" style="display: inline-block" Text="Spec Types"></RadzenHeading>

    <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin-bottom: 20px" />
}
else
{
    <RadzenHeading Size="H1" style="display: inline-block" Text="@($"{reqIf?.TheHeader.Title} - Specification Types")"></RadzenHeading>

    <RadzenGrid Count="@count" PageSize="10" AllowPaging="true" LoadData="@LoadData" Data="@this.specificationTypes" TItem="SpecType">
        <Columns>
            <RadzenGridColumn TItem="SpecType" Property="Identifier" Title="Identifier">
                <Template Context="specType">
                    <a href="/spectype/@specType?.Identifier">@specType?.LongName</a>
                </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SpecType" Property="Description" Title="Description" />
            <RadzenGridColumn TItem="SpecType" Property="LastChange" Title="Last Change" />
            <RadzenGridColumn TItem="SpecType" Property="Identifier" Title="Identifier" />
            <RadzenGridColumn TItem="SpecType" Property="AlternativeId" Title="Alternative Id" />
        </Columns>
    </RadzenGrid>
}

@code {

    /// <summary>
    /// Gets or sets the unique identifier of the <see cref="ReqIF.TheHeader"/>
    /// </summary>
    [Parameter]
    public string Identifier { get; set; }

    /// <summary>
    /// a value indicating whether the page is loading or not
    /// </summary>
    private bool isLoading = true;

    /// <summary>
    /// a value that states the total amount of <see cref="SpecType"/>s in the reqif file
    /// </summary>
    private int count;

    /// <summary>
    /// The <see cref="SpecificationType"/>s that are contained in the <see cref="ReqIF"/>
    /// </summary>
    private IEnumerable<SpecificationType> specificationTypes;

    /// <summary>
    /// The <see cref="ReqIF"/> object that is loaded on the page
    /// </summary>
    private ReqIF reqIf;

    /// <summary>
    /// Asynchronous Component initialization
    /// </summary>
    /// <returns>
    /// an awaitable <see cref="Task" />
    /// </returns>
    protected override void OnInitialized()
    {
        isLoading = false;
    }

    /// <summary>
    ///     Load the data into view-models
    /// </summary>
    protected void LoadData(LoadDataArgs args)
    {
        try
        {
            isLoading = true;

            this.reqIf = this.reqIfLoaderService.ReqIFData.SingleOrDefault(x => x.TheHeader.Identifier == this.Identifier);

            this.specificationTypes = reqIf.CoreContent.SpecTypes.OfType<SpecificationType>();

            this.count = this.specificationTypes.Count();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
