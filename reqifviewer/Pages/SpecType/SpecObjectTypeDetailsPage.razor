@page "/reqif/{ReqIF}/specobjecttype/{Identifier}"

@using ReqIFSharp
@using ReqifViewer.Infrastructure.Services
@using reqifviewer.Components

@inject IReqIFLoaderService reqIfLoaderService

@if (isLoading)
{
    <RadzenHeading Size="H1" style="display: inline-block" Text="Spec Object Types"></RadzenHeading>

    <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin-bottom: 20px" />
}
else
{
    <RadzenCard Style="margin-bottom: 20px">
        <ChildContent>
            @this.specObjectType?.LongName
        </ChildContent>
    </RadzenCard>

    <div class="row">
        <div class="col-md-12 col-lg-12 col-xl-12">
            <RadzenCard Style="margin-bottom: 20px">
                <RadzenHeading Text="SpecObject Type Attribute Definitions" Size="H6"></RadzenHeading>

                <AttributeDefinitionsComponent AttributeDefinitions="this.specObjectType?.SpecAttributes" />
            </RadzenCard>
        </div>
    </div>
}

@code {

    /// <summary>
    /// Gets or sets the unique identifier of the <see cref="ReqIF.TheHeader"/>
    /// </summary>
    [Parameter]
    public string ReqIF { get; set; }

    /// <summary>
    /// Gets or sets the unique identifier of the <see cref="SpecObjectType"/>
    /// </summary>
    [Parameter]
    public string Identifier { get; set; }

    /// <summary>
    /// a value indicating whether the page is loading or not
    /// </summary>
    private bool isLoading = true;

    /// <summary>
    /// a value that states the total amount of <see cref="SpecObjectType"/>s in the reqif file
    /// </summary>
    private int count;

    /// <summary>
    /// The <see cref="SpecObjectType"/> object that is loaded on the page
    /// </summary>
    private SpecObjectType specObjectType;

    /// <summary>
    /// The <see cref="ReqIF"/> object that is loaded on the page
    /// </summary>
    private ReqIF reqIf;

    protected override void OnParametersSet()
    {
        isLoading = false;

        this.LoadData();
    }

    /// <summary>
    /// Load the data into view-models
    /// </summary>
    protected void LoadData()
    {
        try
        {
            isLoading = true;
            this.StateHasChanged();

            var reqIf = this.reqIfLoaderService.ReqIFData.SingleOrDefault(x => x.TheHeader.Identifier == this.ReqIF);

            this.specObjectType = reqIf.CoreContent.SpecTypes.OfType<SpecObjectType>().SingleOrDefault(x => x.Identifier == Identifier);
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

}
